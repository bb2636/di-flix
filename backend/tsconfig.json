{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".", // ★ 프로젝트 루트 기준
    "paths": {
      "@/*": ["src/*"],
      "@generated/*": ["generated/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "generated"] // ★ src와 generated 폴더 다 포함
}
